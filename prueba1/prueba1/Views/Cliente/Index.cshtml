@model List<ClienteViewModel>

@{
    ViewData["title"] = "Clientes";
}

<div class="container py-4">
    <div class="row justify-content-center">
        <div class="col-md-10">
            <div class="d-flex justify-content-between align-items-center mb-3">
                <h2 class="mb-0">Lista de Clientes</h2>
                <a href="/Cliente/Create" class="btn btn-success">
                    <i class="bi bi-plus-circle me-1"></i> Nuevo Cliente
                </a>
            </div>

            @if (Model != null && Model.Any())
            {
                <div class="table-responsive">
                    <table class="table table-hover table-bordered align-middle">
                        <thead class="table-light">
                            <tr>
                                <th scope="col">#</th>
                                <th scope="col">Nombre</th>
                                <th scope="col">Email</th>
                                <th class="text-center" scope="col">Acciones</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <th scope="row">@item.Id</th>
                                    <td>@item.Nombre</td>
                                    <td>@item.Email</td>
                                    <td class="text-center">
                                        <div class="btn-group" role="group">
                                            @Html.ActionLink("Editar", "Edit", new { clienteid = item.Id }, new { @class = "btn btn-sm btn-outline-primary" })
                                            @Html.ActionLink("Eliminar", "Delete", new { clienteid = item.Id }, new { @class = "btn btn-sm btn-outline-danger ms-2" })
                                        </div>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            }
            else
            {
                <div class="alert alert-info text-center" role="alert">
                    No hay clientes registrados.
                </div>
            }
        </div>
    </div>
</div>
